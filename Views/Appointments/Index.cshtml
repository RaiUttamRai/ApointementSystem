@using static ApointementSystem.Models.ApointmentModel.Appointment
@model IEnumerable<ApointementSystem.Models.ApointmentModel.Appointment>

<div class="container mt-5 ">
    <h2>Appointments</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Appointment</a>

    <table class="table">
        <thead>
            <tr>
                <th>Officer</th>
                <th>Visitor</th>
                <th>Name</th>
                <th>Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Officer.Name</td>
                    <td>@item.Visitor.Name</td>
                    <td>@item.Name</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>
                    <td>@item.StartTime.ToString("HH:mm")</td>
                    <td>@item.EndTime.ToString("HH:mm")</td>
                    <td>
                        @if (item.Status == AppointmentStatus.Active)
                        {
                            <span class="badge bg-primary">Active</span>
                        }
                        else if (item.Status == AppointmentStatus.Deactivated)
                        {
                            <span class="badge bg-warning">Deactive</span>
                        }
                        else if (item.Status == AppointmentStatus.Completed)
                        {
                            <span class="badge bg-success">Completed</span>
                        }
                        else if (item.Status == AppointmentStatus.Cancelled)
                        {
                            <span class="badge bg-danger">Cancel</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AppointmentId" class="btn btn-info">Edit</a>
                        <a asp-action="Cancel" asp-route-id="@item.AppointmentId" class="btn btn-danger">Cancel</a>
                        <a asp-action="Complete" asp-route-id="@item.AppointmentId" class="btn btn-success">Complete</a>
                        <a asp-action="Activate" asp-route-id="@item.AppointmentId" class="btn btn-primary">Activate</a>
                        <a asp-action="Deactivate" asp-route-id="@item.AppointmentId" class="btn btn-warning">Deactivate</a>

                        @* @if (item.Status == AppointmentStatus.Cancelled)
                        {
                            <a class="btn btn-sm btn-secondary" asp-action="Complete" asp-route-id="@item.AppointmentId">Completed</a>
                        }
                        @if (item.Status == AppointmentStatus.Completed)
                        {
                        <a class="btn btn-sm btn-danger" asp-action="Cancel" asp-route-id="@item.AppointmentId">Cancel</a>
                        }

                        @if (item.Status == AppointmentStatus.Active)
                        {
                            <a class="btn btn-sm btn-primary" asp-action="Deactivate" asp-route-id="@item.AppointmentId">Deactivate</a>
                        }
                        @if (item.Status == AppointmentStatus.Deactivated)
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Activate" asp-route-id="@item.AppointmentId">Activate</a>
                        } *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
